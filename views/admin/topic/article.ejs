<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title> - 文章页面</title>
    <meta name="keywords" content="">
    <meta name="description" content="">

    <link rel="shortcut icon" href="favicon.ico"> <link href="/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="/css/font-awesome.css?v=4.4.0" rel="stylesheet">

    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css?v=4.1.0" rel="stylesheet">
    <!-- <link rel="stylesheet" href="/css/default.min.css"> -->

</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content  animated fadeInRight article">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="pull-right">
                            <button class="btn btn-white btn-xs" type="button"><%= topicData.tag %></button>
                            <button class="btn btn-white btn-xs" type="button"><%= topicData.tag %></button>
                        </div>
                        <div class="text-center article-title">
                            <h1>
                                <%= topicData.tName %>
                            </h1>
                        </div>
                        <!-- 解析编辑器代码 -->
                        <div id="text-input" style="width:0%;height:0%;">
                           <!-- 这里什么也不加  -->
                        </div>
                        <div id="preview"><%= topicData.tContent %>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label class="col-sm-10 control-label"></label>
                            <a href="/topic/topicEd?_id=<%= topicData._id %>" type="button" class="btn btn-outline btn-warning">重新编辑</a>
                            <a href="/topic/removeTopic?_id=<%= topicData._id %>" type="button" class="btn btn-outline btn-danger">删除</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- 全局js -->
    <script src="/js/jquery.min.js?v=2.1.4"></script>
    <script src="/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="/js/marked.js"></script>
    <script src="/js/highlight.min.js"></script>
    <script>
        var content = document.getElementById('text-input').innerHTML;
        var renderer_zai30 = new marked.Renderer();
        marked.setOptions({
            renderer: renderer_zai30,
            gfm: true,
            tables: true,
            breaks: true,//回车换成br
            pedantic: false,
            sanitize: true,
            smartLists: true,
            smartypants: false
        });

        //
        function Editor(input, preview) {
            this.update = function () {
                //marked(input.value); 解析Markdown为HTML
                preview.innerHTML = marked(preview.innerHTML);
            };
            input.editor = this;
            this.update();
        }
        var $markdown = function (id) { return document.getElementById(id); };
        new Editor($markdown("preview"), $markdown("preview"));
    </script>

    <!-- 自定义js -->
    <script src="/js/content.js?v=1.0.0"></script>


    
    

</body>

</html>
